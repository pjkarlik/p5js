{
  "parser": "babel-eslint",
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "classes": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-undef": 2,
    "no-tabs": 0,
    "semi": [2, "always"],
    "comma-dangle": 0,
    "no-bitwise": 0,
    "strict": 0,
    "id-length": 0,
    "indent": [2, 2],
    "quotes": [2, "single", "avoid-escape"],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "global-require": 0,
    "no-mixed-operators": 0,
    "consistent-return": 0,
    "array-callback-return": 0,
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "max-len": [1, 120, 4],
    "prefer-template": 0,
    "arrow-body-style": 0
  }
}
